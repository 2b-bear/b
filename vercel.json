{
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "style-src 'self'; script-src 'self' https://static.cloudflareinsights.com; font-src 'self' https://fonts.googleapis.com https://fonts.gstatic.com;"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), geolocation=()"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "^/(.*)$",
      "destination": "https://www.b-bear.org/$1",
      "permanent": true,
      "headers": {
        "Content-Security-Policy": "style-src 'self'; script-src 'self' https://static.cloudflareinsights.com; font-src 'self' https://fonts.googleapis.com https://fonts.gstatic.com;",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "Referrer-Policy": "strict-origin",
        "Permissions-Policy": "camera=(), geolocation=()"
      }
    }
  ]
}
