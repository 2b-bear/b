{
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; style-src 'self'; base-uri 'none'; script-src https://www.b-bear.org https://static.cloudflareinsights.com;"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin"
        },
        {
          "key": "Cache-Control",
          "value": "no-cache"
        }
      ]
    }
  ],
  "redirects": [
    { "source": "/b.txt", "destination": "/", "statusCode": 307 },
    { "source": "/b", "destination": "/", "statusCode": 307 },
    { "source": "/b/", "destination": "/", "statusCode": 307 },
    { "source": "/b.txt/", "destination": "/", "statusCode": 307 }
  ],
  "rewrites": [
    { "source": "/", "destination": "/b.txt" }
  ]
}
